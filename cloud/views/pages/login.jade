extends ../layouts/default

block css
    link(rel='stylesheet', href='/stylesheets/login.css')

block content
    div.container
      form.form-signin(action="/user/login", method="post", role="form")
        h2.form-signin-heading 登录账号
        input.form-control#signin-email(type="email", name="email", placeholder="填写邮箱", required autofocus)
        input.form-control#signin-password(type="password", name="password", placeholder="填写密码", required)
        br
        button.btn.btn-lg.btn-primary.btn-block(type="submit") 登录
        - for (var x = 0; x < 10; x++)
            br

